@using CodingEvents.ViewModels
@model AddEventViewModel
<h1>Add Event</h1>

@*goes to Events controller and uses Add method/action*@
<form asp-controller="Events" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name">Event Name</label>
        <input asp-for="Name"></input>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description"></input>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactEmail">Contact Email</label>
        <input asp-for="ContactEmail"></input>
        <span asp-validation-for="ContactEmail" class="text-danger"></span>
        </div>
    <input type="submit" value="Add Event" />
</form>
